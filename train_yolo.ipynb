    "from ultralytics import YOLO\n",
    "import torch\n",
    "\n",
    "torch.cuda.empty_cache()\n",
    "\n",
    "model = YOLO(\"yolov8s.pt\")  # smaller model\n",
    "\n",
    "model.train(\n",
    "    data=\"rdd2022.yaml\",\n",
    "    epochs=50,\n",
    "    imgsz=416,   # use smaller image size\n",
    "    batch=2,     # small batch for lower VRAM\n",
    "    device=0     # use GPU not your cpu\n",
    ")\n"
   ]
